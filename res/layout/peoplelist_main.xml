<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/upperImage"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:scaleType="fitXY"
        android:src="@drawable/cabezote_chat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/botones_chat" >

        <EditText
            android:id="@+id/EditTextSearch"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:hint="  Buscar persona.."
            android:inputType="text" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/listViewActivePeopleLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ListView
            android:id="@+id/listViewActivePeople"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fondo_chat" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/botones_chat" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ListView
            android:id="@+id/listViewPeople"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fondo_chat"
            android:fastScrollAlwaysVisible="true"
            android:minHeight="100dp" >
        </ListView>
    </LinearLayout>

</LinearLayout>